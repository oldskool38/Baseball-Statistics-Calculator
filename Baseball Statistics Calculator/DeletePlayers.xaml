<Page
	x:Class="BaseballStatisticsCalculator.DeletePlayers"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid x:Name="grdMain">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<ListBox Grid.Column="0" x:Name="lstPlayers" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
		<Button x:Name="cmdDelete" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Grid.Column="1" Content="Delete Player" Click="CmdDelete_Click" />
		<Button x:Name="cmdDeleteAll" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Content="Delete All" Width="107" Click="CmdDeleteAll_Click" />
	</Grid>
</Page>